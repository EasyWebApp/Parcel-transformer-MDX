{
    "name": "parcel-transformer-mdx",
    "version": "0.3.1",
    "license": "LGPL-3.0-or-later",
    "author": "shiy2008@gmail.com",
    "description": "Unofficial MDX 3 transformer plugin for Parcel 2",
    "keywords": [
        "parcel",
        "bundler",
